<form class='entry' action='/days' method='post'>
<h1> Work Schedule </h1>
<table>
  <tr>
  <th>Sunday</th>

  <th>Monday</th>
  <th>Tuesday</th>
  <th>Wednesday</th>
  <th>Thursday</th>
  <th>Friday</th>
  <th>Saturday</th>
</tr>
<tr>
  <td>

{{#each Sunday}}
<li>{{this}}</li>
{{/each}}
  </td>

  <td>
{{#each Monday}}
<li>{{this}}</li>
{{/each}}
  </td>

  <td>
{{#each Tuesday}}
<li>{{this}}</li>
{{/each}}
  </td>

  <td>
{{#each Wednesday}}
<li>{{this}}</li>
{{/each}}
  </td>

  <td>
{{#each Thursday}}
<li>{{this}}</li>
{{/each}}
  </td>

  <td>
{{#each Friday}}
<li>{{this}}</li>
{{/each}}
  </td>

  <td>
{{#each Saturday}}
<li>{{this}}</li>
{{/each}}
  </td>

</tr>
</table>
<div class='green'> </div>
<div class='red'> </div>
<div class='orange'> </div>
{{waiterLits}}
</form>
